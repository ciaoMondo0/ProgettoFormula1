<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="it.unicam.cs.mp.formula1.view.JavaFXController">
    <children>
        <Canvas fx:id="canvas" layoutX="20" layoutY="20" width="800" height="800" />
        <Label fx:id="statusLabel" layoutX="20" layoutY="840" text="Status" />
        <Spinner fx:id="botCountSpinner" layoutX="20" layoutY="870" prefWidth="100" />
        <TextField fx:id="trackFilePath" layoutX="20" layoutY="820" prefWidth="200" promptText="Track file path" />
        <TextField fx:id="botsFilePath" layoutX="240" layoutY="820" prefWidth="200" promptText="Bots file path" />
        <Button layoutX="460" layoutY="820" text="Start Race" onAction="#startRace" />
    </children>
</AnchorPane>
